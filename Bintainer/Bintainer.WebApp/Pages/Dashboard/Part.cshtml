                            <div class="col-md-2">
                                <div class="row">
                                    <label for="partName" class="form-label">Part name</label>
                                </div>      
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control input-sharp " id="partName" placeholder="partName">                                
                            </div>
                        </div>
                        <button class="button-row btn btn-primary mt-3">Search</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


